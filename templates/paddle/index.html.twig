{% extends 'base.html.twig' %}

{% block content %}

 <div class="container mt-4 ">
        <div class="row">
            {# je boucle sur la collection paddle_list#}
            {% for paddle in paddle_list %}
           {# {{ dump(paddles) }} #}
           <div class="card mb-5 col-6">
                
                <img src="{{ asset('uploads/pictures/' ~ (paddle.picture ?: 'default-image.jpg')) }}" alt="Description produit" class="card-img-top">
                <div class="card-body">
                  <h5 class="card-title">{{paddle.name}}</h5>
                  <p class="card-text">{{paddle.description}}</p>
                  <p class="card-text"> {{paddle.price}} 	&#x20AC;</p>
                  <p class="card-text"><small class="text-muted">Modifiéé le :{{paddle.updatedAt|date("d/m/Y")}}</small></p>
                </div>
              </div>
            {% endfor %}
</div>
{% endblock %}